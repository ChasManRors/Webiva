- current_time = Time.now
= active_table_for :simple_content_table, @active_table_output,                                        |
  :refresh_url => url_for(:action => 'simple_content_table'),                                          |
  :style => 'width:100%',                                                                              |
  :more_actions => [['Delete','delete','Are you sure you want to delete the selected models?']] do |t| |
  = active_tr 'simple_content', t.id do
    %td{:align => "left", :nowrap => "1"}= entry_checkbox "simple_content", t.id
    %td= link_to t.name, :action => 'edit', :path => t.id
    %td{:align => "center", :width => "160"}= t.created_at ? t.created_at.strftime(DEFAULT_DATETIME_FORMAT.t) : '-'
    %td{:align => "center", :width => "160"}= t.updated_at ? t.updated_at.strftime(DEFAULT_DATETIME_FORMAT.t) : '-'
