= active_table_for :webform_result_table, @active_table_output,                                |
  :refresh_url => url_for(:action => 'webform_result_table', :path => @webform.id),            |
  :style => 'width:100%',                                                                      |
  :actions => [['Mark as Read', 'mark'], ['Mark as Unread', 'unmark']],                        |
  :more_actions => [['Delete','delete','Are you sure you want to delete the results?']] do |t| |
  = active_tr 'result', t.id do
    %td{:align => "left", :nowrap => "1"}= entry_checkbox "result", t.id
    %td{:align => "center"}= t.reviewed? ? 'Yes'.t : 'No'.t
    %td
      %a{:href => 'javascript:void(0);', :onclick => "SCMS.remoteOverlay('#{url_for(:action => 'result', :path => [@webform.id, t.id], :table => 'webform_result_table_update_form')}')"}= t.name || 'Anonymous'
    %td= t.content_model.content_snippet(t.data_model)
    %td{:align => "center"}= t.posted_at ? t.posted_at.strftime(DEFAULT_DATETIME_FORMAT.t) : '-'
