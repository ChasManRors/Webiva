.text_field_control.label{:id => "feature_#{idx}", :style => "border:1px solid #CCCCCC; padding:10px; margin:10px;"}
  %div{:style => "float:right;"}
    = link_to theme_image_tag('icons/actions/delete.gif'), 'javascript:void(0);', :onclick => "ContentEditor.removeFeature(#{idx});"
  %img{:class => 'handle', :style => 'cursor:pointer;', :src => theme_src('icons/paragraph_move.gif'), :id => "handle_#{idx}", :align => 'absmiddle'}
  = feature.name
  %br
  = cms_fields_for "feature[][feature_options]", feature.options do |ff|
    %input{:name => "feature[][feature_handler]", :type => "hidden", :value => feature.feature_handler}
    = render :partial => feature.options_partial, :locals => { :f => ff, :prefix =>  "feature[][feature_options]", :options => feature.options }
