:javascript
  EmailEditor = {
    deleteEmail: function(email_id) {
      if(confirm('#{ "Are you sure you want to delete this email?".t }')) {
        new Ajax.Updater('email_table',
                        "#{ url_for :action => 'delete' }",
                        { 
                          parameters: 'domain_email_id=' + email_id,
                          eval_scripts:true
                        });
      }
    
    }
  
  }

= action_panel do |p|
  = p.link 'Add an Email Account', :icon => 'add.gif', :action => 'new'

%hr/
.admin_content
  #email_table
    = render :partial => 'email_table'
