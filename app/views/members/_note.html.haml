#user_note.cms_form.admin_form{:style => "width:680px;"}
  %div{:align => "right"}
    %a{:href => "javascript:void(0);", :onclick => "RedBox.close();"} [x] close
  %h3= @user.name
  %div{:style => "width:315px; padding-right:10px; float:left;"}
    = stat_view do |t|
      = t.raw 'First Name'.t,  @user.first_name
      = t.raw 'Last Name'.t,  @user.last_name
      = t.raw 'Email'.t, @user.email
      = t.raw 'Last Visit'.t, @user.last_log_entry.occurred_at ? @user.last_log_entry.occurred_at.strftime(DEFAULT_DATETIME_FORMAT.t) : 'Never'.t
    - if @user.last_session
      %div{:style => "height:220px; overflow:auto;"}
        - @user.last_session.domain_log_entries.find(:all, :order => 'occurred_at DESC').each do |entry|
          = entry.url
          %br/
  %div{:style => "width:325px; float:left;"}
    = cms_form_for :note, @note, :remote => true, :update => 'RB_window' do |f|
      = f.text_area :note, :rows => 3, :vertical => true, :label => 'Note'.t
      = f.submit 'Add Note'
    %br/
    - unless @notes.empty?
      %div{:style => "height:220px; overflow:auto;"}
        - @notes.each do |note|
          .note
            = render :partial => 'user_note', :locals => {:note => note}
  .clear
